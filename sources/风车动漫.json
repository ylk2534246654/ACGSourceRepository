{
  "name": "风车动漫",
  "charset": "gb2312",
  "search": {
    "requestURL": "http://dm.dm530.net/search.asp",
	"requestMethod": "POST",
    "requestData": "searchword=[$key]"
  },"metadata": {
    "list": "{selector:#mobile-index > ul > li}",
    "name": "{selector:div > a > img@attr->alt}",
    "author": "{selector:div.am-gallery-desc}",
    "img": "{selector:div > a > img@attr->data-original}",
	"link": "{selector:div > a@attr->href}"
  },
  "detail": {
    "author": "{selector:#p-info > p:nth-child(6)}",
    "summary": "{selector:p.txtDesc.autoHeight}",
    "upDate": "{selector:#p-info > p:nth-child(6)}",
    "catalog":"[#如果目录在其他页面,则添加跳转链接的获取]",
	"chapter": [{
		"list": "{selector:ul.mvlist > li}",
		"name": "{selector:a@attr->title}",
		"link": "{selector:a@attr->href}",
		"orderBy": 0,
		"category":3
	  }]
  }
}